import java.util.HashMap;
import java.util.Iterator;
import java.util.Scanner;
import java.util.Set;

public class Func {
	Scanner sc;
	HashMap<Integer,People> peo;
	int num=0;
	
	Func(){
		sc=new Scanner(System.in);
		peo=new HashMap<Integer,People>();
	}
	
	public void Input(People pe) {
		sc=new Scanner(System.in);
		
		System.out.println("이름을 입력해주세요");
		String name=sc.next();
		pe.setName(name);
		
		System.out.println("휴대전화번호를 입력해주세요 -빼고");
		System.out.print("010");
		int Number=sc.nextInt();
		pe.setNumber(Number);
		
		System.out.println("메모를 입력해주세요");
		String memo=sc.next();
		pe.setmemo(memo);
		
		peo.put(num,pe);
		
		num++;
	}
	public void Output() {
		Set<Integer> keySet =peo.keySet();
		Iterator<Integer> iterator = keySet.iterator();
		
		while(iterator.hasNext()) {
			int key = iterator.next();
			
			System.out.print("이름:  "+peo.get(key).getName());
			System.out.print("전화번호: 010"+peo.get(key).getNumber());
			System.out.println("메모:  "+peo.get(key).getmemo());
		}
		
	}
	public void Modify() {
		Set<Integer>keySet=peo.keySet();
		Iterator<Integer> iterator=keySet.iterator();
		
		System.out.println("수정할 사람을 입력하십시오.");
		String name = sc.next();
		System.out.println("수정하고 싶은 항목을 고르십시오.");
		System.out.println("1.이름 2.전화번호 3.메모 ");
		int Modifynumber = sc.nextInt();
		int key = iterator.next();
		if(Modifynumber==1) {
			if(name.equals(peo.get(key).getName())) {
				System.out.println("바뀐 이름을 입력해주세요");
				name=sc.next();
				peo.get(key).setName(name);
			}
		}
		if(Modifynumber==2) {
			if(name.equals(peo.get(key).getName())) {
				System.out.println(peo.get(key).getName()+"바뀐 휴대전화번호를 입력해주세요");
				int ModifyPhoneNum=sc.nextInt();
				peo.get(key).setNumber(ModifyPhoneNum);
			}
		}
		if(Modifynumber==3) {
			if(name.equals(peo.get(key).getName())) {
				System.out.println(peo.get(key).getName()+"바뀐 메모를 입력해주세요");
				String Modifymemo=sc.next();
				peo.get(key).setmemo(Modifymemo);
			}
		}
		
	}
	public void Delete() {
		System.out.println("누구를 삭제하시겠습니까?");
		String name = sc.next();
		
		for(int i=0;i<peo.size();i++) {
			if(name.equals(peo.get(i).getName())) {
				peo.remove(i);
			}
		}
		
	}
}
